{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "outDir": "./lib",
    "target": "es2017",
    "allowJs": true,
    "plugins": [
      { 
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": true,
        "configFile": "../tslint.json",
        "suppressWhileTypeErrorsPresent": false
      }
    ],
    "moduleResolution": "node",
    "baseUrl": "./src"
  },
  "include": [
    "./index.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode"
  ]
}